@model Uiftec.PPW.Redesocial.Models.UsuarioModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Redefinir Senha";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Redefinir Senha - Rede Social</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #007BFF;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 350px;
            text-align: center;
        }

            .login-box input {
                margin-bottom: 15px;
                padding: 10px;
                border-radius: 6px;
                width: 100%;
                border: 1px solid #ccc;
            }

            .login-box button {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 6px;
                background-color: #007BFF;
                color: white;
                font-weight: bold;
            }

            .login-box .msg {
                margin-top: 10px;
                font-size: 0.9em;
                color: green;
            }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Redefinir Senha</h2>

        <form asp-action="RedefinirSenha" method="post">
            <input type="hidden" asp-for="ID" />
            <input type="password" asp-for="Senha" placeholder="Nova senha" required />
            <button type="submit">Salvar</button>
        </form>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Login")">Voltar ao login</a>
        </div>
    </div>
</body>
</html>