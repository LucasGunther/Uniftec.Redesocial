@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model string

@{
    ViewData["Title"] = "Recuperar Senha";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Recuperar Senha - Rede Social</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #007BFF;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 350px;
            text-align: center;
        }

            .login-box input {
                margin-bottom: 15px;
                padding: 10px;
                border-radius: 6px;
                width: 100%;
                border: 1px solid #ccc;
            }

            .login-box button {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 6px;
                background-color: #007BFF;
                color: white;
                font-weight: bold;
            }

            .login-box .msg {
                margin-top: 10px;
                font-size: 0.9em;
                color: #333;
            }

            .login-box .erro {
                color: red;
            }

            .login-box .sucesso {
                color: green;
            }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Recuperar Senha</h2>

        <form asp-action="EsqueciSenha" method="post">
            <input type="text" name="username" placeholder="Digite seu nome de usuário" required />
            <button type="submit">Recuperar</button>
        </form>

        @if (!string.IsNullOrEmpty(Model))
        {
            <div class="msg @(Model.Contains("não") ? "erro" : "sucesso")">@Model</div>
        }

        <div class="mt-3">
            <a href="@Url.Action("Index", "Login")">Voltar ao login</a>
        </div>
    </div>
</body>
</html>