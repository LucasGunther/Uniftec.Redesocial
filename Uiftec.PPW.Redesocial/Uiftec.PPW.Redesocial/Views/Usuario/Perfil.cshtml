@model Uiftec.PPW.Redesocial.Models.UsuarioModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Perfil de " + Model.Nome;
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body text-center">

            @{
                var foto = string.IsNullOrEmpty(Model.FotoPerfil)
                ? Url.Content("~/Imagens/avatar-default.png")
                : Model.FotoPerfil;
            }

            <img src="@foto"
                 alt="Foto de Perfil"
                 style="width:150px; height:150px; border-radius:50%;"
                 onerror="this.src='~/Imagens/avatar-default.png'" />

            <h3>@Model.Nome</h3>
            <p class="text-muted">@Model.Username</p>
            <p>@Model.Descricao</p>

            <div class="d-flex justify-content-center mt-3 gap-3">
                <div><strong>@Model.Publicacoes</strong><br />Publicações</div>
                <div><strong>@Model.Seguidores</strong><br />Seguidores</div>
                <div><strong>@Model.Seguindo</strong><br />Seguindo</div>
            </div>

            <div class="mt-3">
                <p><strong>Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
                <p><strong>Gênero:</strong> @Model.Genero</p>
            </div>
        </div>
    </div>
</div>