@model Uiftec.PPW.Redesocial.Models.UsuarioModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Perfil de " + Model.Nome;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #007BFF;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding-top: 40px;
        }

        .perfil-box {
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 400px;
            text-align: center;
        }

            .perfil-box img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                border: 3px solid #007BFF;
                margin-bottom: 10px;
            }

            .perfil-box h3 {
                margin: 10px 0 5px;
            }

            .perfil-box .text-muted {
                font-size: 0.9em;
                margin-bottom: 10px;
            }

            .perfil-box .estatisticas {
                display: flex;
                justify-content: space-between;
                margin: 20px 0;
            }

                .perfil-box .estatisticas div {
                    flex: 1;
                }

            .perfil-box .info p {
                margin: 5px 0;
            }
    </style>
</head>
<body>

    <div class="perfil-box">
        @{
            var foto = string.IsNullOrEmpty(Model.FotoPerfil)
            ? Url.Content("~/Imagens/avatar6.jpg")
            : Model.FotoPerfil;
        }

        <img src="@foto" alt="Foto de Perfil"
             onerror="this.src='~/Imagens/avatar6.jpg'" />

        <h3>@Model.Nome</h3>
        <p class="text-muted">@Model.Username</p>
        <p>@Model.Descricao</p>

        <div class="estatisticas">
            <div>
                <strong>@Model.Publicacoes</strong><br />Publicações
            </div>
            <div>
                <strong>@Model.Seguidores</strong><br />Seguidores
            </div>
            <div>
                <strong>@Model.Seguindo</strong><br />Seguindo
            </div>
        </div>

        <div class="info">
            <p><strong>Nascimento:</strong> @Model.DataNascimento.ToString("dd/MM/yyyy")</p>
            <p><strong>Gênero:</strong> @Model.Genero</p>
        </div>
    </div>

</body>
</html>