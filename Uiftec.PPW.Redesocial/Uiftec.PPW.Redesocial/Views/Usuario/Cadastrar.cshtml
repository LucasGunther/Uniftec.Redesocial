@model Uiftec.PPW.Redesocial.Models.UsuarioModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Cadastro";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cadastro - Rede Social</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #007BFF;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            margin: auto;
            background-color: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 350px;
        }

        .login-box h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .login-box .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box;
        }

        .login-box .btn {
            width: 100%;
            padding: 10px;
            background-color: #007BFF;
            border: none;
            color: #fff;
            border-radius: 6px;
            font-weight: bold;
        }

        .login-box .btn:hover {
            background-color: #0056b3;
        }

        .text-danger {
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <h2>Cadastro de Usuário</h2>

        <form asp-action="Cadastrar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <input asp-for="Nome" class="form-control" placeholder="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>

            <input asp-for="Username" class="form-control" placeholder="Usuário" />
            <span asp-validation-for="Username" class="text-danger"></span>

            <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>

            <input asp-for="DataNascimento" type="date" class="form-control" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>

            <input asp-for="Genero" class="form-control" placeholder="Gênero" />

            <textarea asp-for="Descricao" class="form-control" placeholder="Descrição"></textarea>

            <input asp-for="FotoPerfil" class="form-control" placeholder="URL da Foto" />

            <button type="submit" class="btn btn-primary mt-2">Cadastrar</button>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
