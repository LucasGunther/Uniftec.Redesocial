@model Uiftec.PPW.Redesocial.Models.FeedViewModel

@{
    ViewData["Title"] = "REDE SOCIAL MTO SHOW";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <div class="col-lg-10 mx-auto">
            <!-- Novo Post -->
            <form asp-action="Criar" asp-controller="Home" method="post">
                <textarea name="TextoPost" class="form-control" placeholder="Escreva algo..." rows="3"></textarea>
                <button type="submit" class="btn btn-primary mt-2">Postar</button>
            </form>

            <!-- Perfil do Usuário -->
            <div class="card mt-4 mb-4 p-3 text-center">
                <img src="@Model.UsuarioAtivo.FotoPerfil" alt="Foto de perfil" class="rounded-circle" style="width: 100px; height: 100px;">
                <h4 class="mt-2">@Model.UsuarioAtivo.Nome</h4>
                <p><strong>@Model.UsuarioAtivo.Publicacoes</strong> Posts | <strong>@Model.UsuarioAtivo.Seguidores</strong> Seguidores | <strong>@Model.UsuarioAtivo.Seguindo</strong> Seguindo</p>
            </div>

            <!-- Stories -->
            @if (Model.StoriesExternos != null && Model.StoriesExternos.Any())
            {
                <div class="card p-3 mb-4">
                    <div class="d-flex overflow-auto">
                        @foreach (var story in Model.StoriesExternos)
                        {
                            <div class="text-center mr-3">
                                <img src="@story.ImagemUrl" class="rounded-circle" style="width: 70px; height: 70px;">
                                <!-- p class="small@story.Usuario</p> -->
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Feed -->
            @foreach (var post in Model.Postagens)
            {
                var usuario = Model.Usuarios.FirstOrDefault(u => u.ID == post.UserId);
                if (usuario != null)
                {
                    <div class="card mb-3 p-3">
                        <div class="d-flex align-items-center">
                            <img src="@usuario.FotoPerfil" class="rounded-circle mr-3" style="width: 50px; height: 50px;">
                            <div>
                                <strong>@usuario.Nome</strong>
                                <div class="text-muted small">@post.date.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p>@post.TextPreview</p>
                            <div>
                                <form method="post" asp-action="Curtir" asp-controller="Home">
                                    <input type="hidden" name="postId" value="@post.Id" />
                                    <button class="btn btn-sm btn-outline-primary mr-2" type="submit">
                                        <i class="fa fa-thumbs-up"></i> Curtir (@post.LikeCount)
                                    </button>
                                </form>
                            </div>
                        </div>

                        <!-- Comentários -->
                        @if (post.Comentarios != null && post.Comentarios.Any())
                        {
                            <div class="mt-3">
                                <h6>Comentários:</h6>
                                @foreach (var comentario in post.Comentarios)
                                {
                                    var autor = Model.Usuarios.FirstOrDefault(u => u.ID == comentario.UserId);
                                    <div class="border p-2 mb-1">
                                        <strong>@autor?.Nome</strong> <small class="text-muted">@comentario.Data.ToString("dd/MM/yyyy HH:mm")</small>
                                        <div>@comentario.Conteudo</div>
                                    </div>
                                }
                            </div>
                        }

                        <!-- Novo Comentário -->
                        <form method="post" asp-action="Comentar" asp-controller="Home" class="mt-2">
                            <input type="hidden" name="postId" value="@post.Id" />
                            <textarea name="textoComentario" class="form-control" placeholder="Adicionar comentário" rows="2"></textarea>
                            <button class="btn btn-sm btn-secondary mt-1" type="submit">Comentar</button>
                        </form>
                    </div>
                }
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
